<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="iways_developertoolbox"
                 translate="label"
                 type="text"
                 sortOrder="111"
                 showInDefault="1"
                 showInWebsite="1"
                 showInStore="1">
            <label>DeveloperToolBox</label>
            <tab>iways</tab>
            <resource>Iways_DeveloperToolBox::config</resource>
            
            <group id="developer"
                   translate="label"
                   type="text"
                   sortOrder="000"
                   showInDefault="1"
                   showInWebsite="1"
                   showInStore="1">
                <label>Developer</label>
                <field id="show_toolbar_on_frontend"
                       translate="label"
                       type="select"
                       sortOrder="000"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Show toolbar on frontend</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
            
            <group id="components"
                   translate="label"
                   type="text"
                   sortOrder="100"
                   showInDefault="1"
                   showInWebsite="1"
                   showInStore="1">
                <label>Components</label>
                <field id="index_scope"
                       translate="label"
                       type="select"
                       sortOrder="000"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Index scope</label>
                    <source_model>Iways\DeveloperToolBox\Model\Config\Source\ScopeOptions</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
