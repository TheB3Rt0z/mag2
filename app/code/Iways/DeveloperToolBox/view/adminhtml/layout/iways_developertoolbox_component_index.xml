<?xml version="1.0" ?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="styles" />
    <body>
        <referenceContainer name="content">
            <block class="Iways\DeveloperToolBox\Block\Adminhtml\Component"
                   name="iways_developertoolbox_block_adminhtml_component"
                   as="iways_developertoolbox_block_adminhtml_component">
                <block class="Magento\Backend\Block\Widget\Grid"
                       name="magento_backend_block_widget_grid"
                       as="magento_backend_block_widget_grid">
                   <arguments>
                    	<argument name="id"
                              	  xsi:type="string">entity_id</argument>
                        <argument name="dataSource"
                                  xsi:type="object">Iways\DeveloperToolBox\Model\ResourceModel\Component\Collection</argument>
                        <argument name="default_sort"
                                  xsi:type="string">id</argument>
                        <argument name="default_dir"
                                  xsi:type="string">ASC</argument>
                        <argument name="save_parameters_in_session"
                                  xsi:type="string">1</argument>
                    </arguments>
                    <block class="Magento\Backend\Block\Widget\Grid\ColumnSet"
                           name="magento_backend_block_widget_grid_columnset"
                           as="magento_backend_block_widget_grid_columnset">
                        <arguments>
                            <argument name="rowUrl"
                                      xsi:type="array">
                                <item name="path"
                                      xsi:type="string">*/*/edit</item>
                            </argument>
                        </arguments>
                        <block class="Magento\Backend\Block\Widget\Grid\Column"
                               name="magento_backend_block_widget_grid_column_id"
                               as="magento_backend_block_widget_grid_column_id">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">ID</argument>
                                <argument name="index" xsi:type="string">entity_id</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column"
                               name="magento_backend_block_widget_grid_column_title"
                               as="magento_backend_block_widget_grid_column_title">
                            <arguments>
                                <argument name="header"
                                          xsi:type="string"
                                          translate="true">Component identifier</argument>
                                <argument name="index"
                                          xsi:type="string">component_identifier</argument>
                                <argument name="type"
                                          xsi:type="string">text</argument>
                                <argument name="column_css_class"
                                          xsi:type="string">col-id</argument>
                                <argument name="header_css_class"
                                          xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                    </block>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
