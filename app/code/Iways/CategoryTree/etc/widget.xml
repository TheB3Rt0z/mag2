<?xml version="1.0" ?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="iways_categorytree"
            class="Iways\CategoryTree\Block\Frontend\Widget"
            placeholder_image="Iways_Base::images/icon_32x32.png">
        <label>i-ways CategoryTree</label>
        <description>i-ways CategoryTree Widget</description>
        <parameters>
            <parameter name="block_title"
                       xsi:type="text"
                       required="false">
                <label translate="true">Block title</label>
            </parameter>
            <parameter name="tree_root"
                       xsi:type="select"
                       required="true"
                       source_model="Iways\CategoryTree\Model\Config\Source\RootOptions">
                <label translate="true">Root category</label>
            </parameter>
            <parameter name="custom_root"
                       xsi:type="select"
                       required="false"
                       source_model="Iways\CategoryTree\Model\Config\Source\CategoryOptions">
                <label translate="true">Custom root category</label>
                <depends>
                    <parameter name="tree_root"
                               value="3" />
                </depends>
            </parameter>
            <parameter name="tree_depth"
                       xsi:type="select"
                       required="true"
                       source_model="Iways\CategoryTree\Model\Config\Source\DepthOptions">
                <label translate="true">Tree depth</label>
            </parameter>
            <parameter name="show_empty"
                       xsi:type="select"
                       required="true"
                       source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Show empty categories</label>
            </parameter>
        </parameters>
    </widget>
</widgets>
