$contents = $this->getData('contents');

$contents = str_replace(
    $this->getData('static_path'),
    $this->getViewFileUrl($this->getData('view_path')),
    $contents
);

$parse_down = new Parsedown();
$parse_down->setBreaksEnabled(true);
$contents = $parse_down->text($contents);

$images_path = 'Iways_Base/images/documentation/';

$markdown_url = $this->getViewFileUrl($images_path . 'logo_markdown.png');

?>

<div class="iways-documentation">
    <img src="<?php echo $markdown_url ?>"
         alt="MarkDown"
         title="MarkDown"
         class="logo markdown" />

    <?php
    if ($this->getData('locale')) {
        $image_url = $this->getViewFileUrl(
            $images_path
            . $this->getData('locale')
            . '/language_flag.png'
        );
        ?>
        <span class="language-flag">
            <img src="<?php echo $image_url ?>"
                 alt="<?php echo $this->getData('locale') ?>"
                 title="<?php echo $this->getData('locale') ?>" />
        </span>
        <?php
    }

    echo $contents;
    ?>
</div>
