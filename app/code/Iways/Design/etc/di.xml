<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Theme\Model\Design\Config\MetadataProvider">
        <arguments>
            <argument name="metadata" xsi:type="array">
                <item name="body_background_color" xsi:type="array">
                    <item name="path" xsi:type="string">design/body/background_color</item>
                    <item name="fieldset" xsi:type="string">iways_settings/body</item>
                </item>
                <item name="body_background_src" xsi:type="array">
                    <item name="path" xsi:type="string">design/body/background_src</item>
                    <item name="fieldset" xsi:type="string">iways_settings/body</item>
                    <item name="backend_model" xsi:type="string">Iways\Design\Model\Design\Backend\Body\Background</item>
                    <item name="base_url" xsi:type="array">
                        <item name="type" xsi:type="string">media</item>
                        <item name="scope_info" xsi:type="string">1</item>
                        <item name="value" xsi:type="string">body</item>
                    </item>
                </item>
                <item name="body_background_gradient" xsi:type="array">
                    <item name="path" xsi:type="string">design/body/background_gradient</item>
                    <item name="fieldset" xsi:type="string">iways_settings/body</item>
                </item>
                <item name="sidebar_title_main" xsi:type="array">
                    <item name="path" xsi:type="string">design/sidebar/sidebar_title_main</item>
                    <item name="fieldset" xsi:type="string">iways_settings/sidebar</item>
                </item>
                <item name="sidebar_title_additional" xsi:type="array">
                    <item name="path" xsi:type="string">design/sidebar/sidebar_title_additional</item>
                    <item name="fieldset" xsi:type="string">iways_settings/sidebar</item>
                </item>
            </argument>
        </arguments>
    </type>
</config>
