<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="iways_settings">
        <argument name="data"
                  xsi:type="array">
            <item name="config"
                  xsi:type="array">
                <item name="label"
                      xsi:type="string"
                      translate="true">i-ways Settings</item>
                <item name="sortOrder"
                      xsi:type="number">999</item>
                <item name="additionalClasses"
                      xsi:type="string">iways-settings</item>
            </item>
        </argument>
        <fieldset name="body">
            <argument name="data"
                      xsi:type="array">
                <item name="config"
                      xsi:type="array">
                    <item name="label"
                          xsi:type="string"
                          translate="true">Body</item>
                    <item name="collapsible"
                          xsi:type="boolean">true</item>
                    <item name="level"
                          xsi:type="number">1</item>
                </item>
            </argument>
            <field name="body_background_color">
                <argument name="data"
                          xsi:type="array">
                    <item name="config"
                          xsi:type="array">
                        <item name="label"
                              xsi:type="string"
                              translate="true">Background color</item>
                        <item name="formElement"
                              xsi:type="string">input</item>
                        <item name="componentType"
                              xsi:type="string">input</item>
                        <item name="additionalClasses"
                              xsi:type="string">iways-color</item>
                    </item>
                </argument>
            </field>
            <field name="body_background_src">
                <argument name="data"
                          xsi:type="array">
                    <item name="config"
                          xsi:type="array">
                        <item name="label"
                              xsi:type="string"
                              translate="true">Background image</item>
                        <item name="formElement"
                              xsi:type="string">fileUploader</item>
                        <item name="componentType"
                              xsi:type="string">fileUploader</item>
                        <item name="notice"
                              xsi:type="string"
                              translate="true">Allowed file types: png, gif, jpg, jpeg, svg.</item>
                        <item name="maxFileSize"
                              xsi:type="number">5242880</item>
                        <item name="allowedExtensions"
                              xsi:type="string">jpg jpeg gif png svg</item>
                        <item name="uploaderConfig"
                              xsi:type="array">
                            <item name="url"
                                  xsi:type="string">theme/design_config_fileUploader/save</item>
                        </item>
                    </item>
                </argument>
            </field>
            <field name="body_background_src_attachment">
                <argument name="data"
                          xsi:type="array">
                    <item name="options"
                          xsi:type="object">Iways\Design\Model\Config\Body\Background\AttachmentOptions</item>
                    <item name="config"
                          xsi:type="array">
                        <item name="label"
                              xsi:type="string"
                              translate="true">Background image attachment</item>
                        <item name="formElement"
                              xsi:type="string">select</item>
                    </item>
                </argument>
            </field>
            <field name="body_background_src_size_custom">
                <argument name="data"
                          xsi:type="array">
                    <item name="config"
                          xsi:type="array">
                        <item name="formElement"
                              xsi:type="string">hidden</item>
                        <item name="showFallbackReset"
                              xsi:type="string">true</item>
                        <item name="dataType"
                              xsi:type="string">string</item>
                    </item>
                </argument>
            </field>
            <field name="body_background_src_size">
                <argument name="data"
                          xsi:type="array">
                    <item name="options"
                          xsi:type="object">Iways\Design\Model\Config\Body\Background\SizeOptions</item>
                    <item name="config"
                          xsi:type="array">
                        <item name="label"
                              xsi:type="string"
                              translate="true">Background image size</item>
                        <item name="formElement"
                              xsi:type="string">select</item>
                        <item name="additionalClasses"
                              xsi:type="string">iways-width-height</item>
                        <item name="elementTmpl"
                              xsi:type="string">Iways_Design/form/element/select-width-height</item>
                    </item>
                </argument>
            </field>
            <field name="body_background_src_position_custom">
                <argument name="data"
                          xsi:type="array">
                    <item name="config"
                          xsi:type="array">
                        <item name="formElement"
                              xsi:type="string">hidden</item>
                        <item name="showFallbackReset"
                              xsi:type="string">true</item>
                        <item name="dataType"
                              xsi:type="string">string</item>
                    </item>
                </argument>
            </field>
            <field name="body_background_src_position">
                <argument name="data"
                          xsi:type="array">
                    <item name="options"
                          xsi:type="object">Iways\Design\Model\Config\Body\Background\PositionOptions</item>
                    <item name="config"
                          xsi:type="array">
                        <item name="label"
                              xsi:type="string"
                              translate="true">Background image position</item>
                        <item name="formElement"
                              xsi:type="string">select</item>
                        <item name="additionalClasses"
                              xsi:type="string">iways-width-height</item>
                        <item name="elementTmpl"
                              xsi:type="string">Iways_Design/form/element/select-width-height</item>
                    </item>
                </argument>
            </field>
            <field name="body_background_src_repeat">
                <argument name="data"
                          xsi:type="array">
                    <item name="options"
                          xsi:type="object">Iways\Design\Model\Config\Body\Background\RepeatOptions</item>
                    <item name="config"
                          xsi:type="array">
                        <item name="label"
                              xsi:type="string"
                              translate="true">Background image repeat</item>
                        <item name="formElement"
                              xsi:type="string">select</item>
                    </item>
                </argument>
            </field>
            <field name="body_background_gradient">
                <argument name="data"
                          xsi:type="array">
                    <item name="config"
                          xsi:type="array">
                        <item name="label"
                              xsi:type="string"
                              translate="true">Gradient</item>
                        <item name="formElement"
                              xsi:type="string">textarea</item>
                        <item name="componentType"
                              xsi:type="string">textarea</item>
                        <item name="notice"
                              xsi:type="string"
                              translate="true">see http://www.colorzilla.com/gradient-editor for configurable valid CSS gradient's code and presets</item>
                    </item>
                </argument>
            </field>
        </fieldset>
        <fieldset name="sidebar">
             <argument name="data"
                       xsi:type="array">
                <item name="config"
                      xsi:type="array">
                    <item name="label"
                          xsi:type="string"
                          translate="true">Sidebar</item>
                    <item name="collapsible"
                          xsi:type="boolean">true</item>
                    <item name="level"
                          xsi:type="number">1</item>
                </item>
            </argument>
            <field name="sidebar_title_main">
                <argument name="data"
                          xsi:type="array">
                    <item name="config"
                          xsi:type="array">
                        <item name="label"
                              xsi:type="string"
                              translate="true">Main sidebar title</item>
                        <item name="formElement"
                              xsi:type="string">input</item>
                        <item name="componentType"
                              xsi:type="string">input</item>
                    </item>
                </argument>
            </field>
            <field name="sidebar_title_additional">
                <argument name="data"
                          xsi:type="array">
                    <item name="config"
                          xsi:type="array">
                        <item name="label"
                              xsi:type="string"
                              translate="true">Additional sidebar title</item>
                        <item name="formElement"
                              xsi:type="string">input</item>
                        <item name="componentType"
                              xsi:type="string">input</item>
                    </item>
                </argument>
            </field>
        </fieldset>
    </fieldset>
</form>
