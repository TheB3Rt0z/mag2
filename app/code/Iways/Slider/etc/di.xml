                    <item name="entityTableName" xsi:type="string">iways_slider_banner</item>
                    <item name="identifierField" xsi:type="string">banner_id</item>
                </item>
                <item name="Iways\Slider\Api\Data\SliderInterface" xsi:type="array">
                    <item name="entityTableName" xsi:type="string">iways_slider_slider</item>
                    <item name="identifierField" xsi:type="string">slider_id</item>
                </item>
            </argument>
        </arguments>
