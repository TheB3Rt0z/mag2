    <type name="Iways\Slider\Model\ResourceModel\Slider\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">iways_slider_slider</argument>
            <argument name="eventPrefix" xsi:type="string">iways_slider_slider_collection</argument>
            <argument name="eventObject" xsi:type="string">slider_collection</argument>
            <argument name="resourceModel" xsi:type="string">Iways\Slider\Model\ResourceModel\Slider</argument>
